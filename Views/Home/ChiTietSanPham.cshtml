<html>
<head>
    <title>Trang chủ</title>
    <link href="/css/main.css" rel="stylesheet" />
    <link href="~/font/fontawesome-free-6.6.0-web/css/all.css" rel="stylesheet" />
    <script src="/js/main.js"></script>
</head>
<body>
    <div class="header">
        <div class="logo">
            <img src="/HinhAnh/logo.png" href="" />
        </div>
        <div class="text">
            <a href="/Home/TrangChu">TRANG CHỦ</a>
            <a href="">MENU</a>
            <a href="">ĐẶT BÀN</a>
            <a href="">GIỚI THIỆU</a>
            <a href="">ĐĂNG NHẬP</a>
        </div>
        <div class="iconz">
            <i class="fa-solid fa-magnifying-glass"></i>
            <i class="fa-solid fa-cart-shopping"></i>
        </div>
    </div>

    <div class="product-detail-container">
        <!-- Phần hình ảnh và video -->
        <div class="product-media">
            <img src="@Model.DishImage" alt="@Model.DishName" class="main-product-image" />
            <!-- Hình ảnh sản phẩm nhỏ -->
            @* <div class="product-thumbnails">
            <img src="@Model.Image" alt="@Model.NamePro" />
            <!-- Thêm các hình ảnh khác nếu có -->
            <img src="URL_IMAGE_1" alt="Hình 1" />
            <img src="URL_IMAGE_2" alt="Hình 2" />
            </div> *@
        </div>

        <!-- Phần thông tin sản phẩm -->
        <div class="product-info-section">
            <h1>@Model.DishName</h1>
            <p class="price">@Model.Price.ToString("N0") đ</p>

            <!-- Trạng thái sản phẩm -->
            <p class="status">
                Trạng thái: @(Model.Quantity > 0 ? "Còn hàng" : "Tạm hết hàng")
            </p>

            <!-- Mô tả sản phẩm -->
            <p class="description">@Model.Description</p>

            <!-- Khuyến mãi -->
            <div class="promotion">
                <h3>Khuyến mãi</h3>
                <p>- Phiếu mua hàng trị giá 200,000đ mua sim Mobifone 6MWG125</p>
                <p>- Thu cũ đổi mới: Giảm thêm đến 2,000,000đ</p>
            </div>

            <!-- Nút thêm vào giỏ hàng -->
            <form asp-action="AddToCart" asp-controller="Cart" method="post">
                <input type="hidden" name="productId" value="@Model.Dish_ID" />
                <button type="submit" class="btn btn-success">Thêm vào giỏ</button>
            </form>
        </div>
    </div>
    <div class="text-detail">
        <p>
            <img src="~/HinhAnh/detail1.png" />
            <img src="~/HinhAnh/detail2.png" />
        </p>
    </div>
    <div class="feature">
        <h2>Nội dung sản phẩm</h2>
        <p>@Model.Description</p>

    </div>
    <div class="feedback-box">
        <p>Bạn có hài lòng với thông tin sản phẩm không?</p>
        <div class="feedback-options">
            <button class="feedback-btn happy-btn" onclick="showThankYouMessage()">😊 Hài lòng</button>
            <button class="feedback-btn sad-btn" onclick="showThankYouMessage()">😟 Không hài lòng</button>
        </div>
    </div>
    <!-- Phần thông báo cảm ơn (ẩn đi ban đầu) -->
    <div class="thank-you-message" id="thankYouMessage" style="display: none;">
        <p>Cảm ơn phản hồi của Bạn</p>
    </div>

    <div class="contact">
        <div class="contact-left">
            <img src="~/HinhAnh/logo.png" />
            <h1>©Copyright 2024 KHAKHAU. All Rights Reserved</h1>
        </div>
        <div class="contact-right">
            <h1>CONTACT</h1>
            <h1>Street: D2 street, Ward 25, Binh Thanh District</h1>
            <h1>City: Ho Chi Minh</h1>
            <h1>State/Province/Area: Ho Chi Minh City</h1>
            <h1>Phone number:  (84-8) 3 512 6379/(84-8) 3 804 0955/(84-8) 3 804 0980</h1>
            <h1>Email: abcd@email.com</h1>
        </div>
    </div>

</body>
</html>

