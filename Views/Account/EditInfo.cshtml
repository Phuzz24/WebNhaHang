<html>
<head>
    <title>Trang chủ</title>
    <link href="/css/main.css" rel="stylesheet" />
    <link href="~/font/fontawesome-free-6.6.0-web/css/all.css" rel="stylesheet" />
    <script src="/js/main.js"></script>
</head>
<body>
    <div class="header">
        <div class="logo">
            <img src="/HinhAnh/logo.png" href="" />
        </div>
        <div class="text">
            <a href="">TRANG CHỦ</a>
            <a href="">MENU</a>
            <a href="">ĐẶT BÀN</a>
            <a href="">GIỚI THIỆU</a>
            <!-- Kiểm tra trạng thái đăng nhập từ Session -->
            @if (Context.Session.GetString("Username") != null)
            {
                <div class="dropdown">
                    <a href="#" class="dropdown-toggle" id="userDropdown">
                        <i class="fa-solid fa-user"></i> @Context.Session.GetString("Username")
                    </a>
                    <div class="dropdown-menu" aria-labelledby="userDropdown">
                        <a class="dropdown-item" href="/Account/EditInfo">Xem thông tin cá nhân</a>
                        <a class="dropdown-item" href="/Account/ChangePassword">Đổi mật khẩu</a>
                        <a class="dropdown-item" href="/Account/Logout">Đăng xuất</a>
                    </div>
                </div>
            }
            else
            {
                <a href="/Account/Login">
                    <i class="fa-solid fa-user"></i>
                    Đăng nhập
                </a>
            }
        </div>
        <div class="iconz">
            <i class="fa-solid fa-magnifying-glass"></i>
            <i class="fa-solid fa-cart-shopping"></i>
        </div>
    </div>

    @model WebNhaHang.Models.UserInfoViewModel

    <div class="user-info-container">
        <h2>Chỉnh sửa thông tin cá nhân</h2>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">
                @TempData["SuccessMessage"]
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">
                @TempData["ErrorMessage"]
            </div>
        }

        <form method="post" action="/Account/EditInfoPost">
            @Html.AntiForgeryToken()

            <!-- Thông tin ẩn của User_ID và Customer_ID -->

            <div class="user-info-group">
                <label for="Username">Tên người dùng:</label>
                <input type="text" id="Username" name="Username" class="user-info-control" value="@Model.Username" readonly />
            </div>

            <div class="user-info-group">
                <label for="NameCus">Tên khách hàng:</label>
                <input type="text" id="NameCus" name="NameCus" class="user-info-control" value="@Model.NameCus" />
            </div>

            <div class="user-info-group">
                <label for="AddressCus">Địa chỉ:</label>
                <input type="text" id="AddressCus" name="AddressCus" class="user-info-control" value="@Model.AddressCus" />
            </div>

            <div class="user-info-group">
                <label for="PhoneCus">Số điện thoại:</label>
                <input type="text" id="PhoneCus" name="PhoneCus" class="user-info-control" value="@Model.PhoneCus" />
            </div>

            <div class="user-info-group">
                <label for="EmailCus">Email:</label>
                <input type="email" id="EmailCus" name="EmailCus" class="user-info-control" value="@Model.EmailCus" />
            </div>

            <!-- Đổi mật khẩu -->
            <h3>Đổi mật khẩu</h3>

            <div class="user-info-group">
                <label for="NewPasswordField">Mật khẩu mới:</label>
                <input type="password" id="NewPasswordField" name="NewPassword" class="user-info-control" />
            </div>

            <div class="user-info-group">
                <label for="ConfirmNewPassword">Xác nhận mật khẩu:</label>
                <input type="password" id="ConfirmNewPassword" name="ConfirmPassword" class="user-info-control" />
            </div>

            <button type="submit" class="user-info-submit">Lưu thay đổi</button>
        </form>
    </div>

    <div class="contact">
        <div class="contact-left">
            <img src="~/HinhAnh/logo.png" />
            <h1>©Copyright 2024 KHAKHAU. All Rights Reserved</h1>
        </div>
        <div class="contact-right">
            <h1>CONTACT</h1>
            <h1>Street: D2 street, Ward 25, Binh Thanh District</h1>
            <h1>City: Ho Chi Minh</h1>
            <h1>State/Province/Area: Ho Chi Minh City</h1>
            <h1>Phone number:  (84-8) 3 512 6379/(84-8) 3 804 0955/(84-8) 3 804 0980</h1>
            <h1>Email: abcd@email.com</h1>
        </div>
    </div>

</body>
</html>

